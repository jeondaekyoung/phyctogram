<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purpledk"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_left"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="내 기기"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <knowledge_seek.com.phyctogram.util.MyLinearView
        android:id="@+id/ll_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <knowledge_seek.com.phyctogram.util.MyImageView
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:src="@drawable/equipment" />

        <knowledge_seek.com.phyctogram.util.MyLinearView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderbottom"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일련번호" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:24:E4:28:38:5D"
                android:textColor="#aaa" />
        </knowledge_seek.com.phyctogram.util.MyLinearView>

        <knowledge_seek.com.phyctogram.util.MyLinearView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderbottom"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="펌웨어 버전" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.3.0"
                android:textColor="#aaa" />
        </knowledge_seek.com.phyctogram.util.MyLinearView>

        <Button
            android:id="@+id/connWifiBtn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_border_radius"
            android:text="기기 연결 해제"
            android:textColor="#ffffff" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <knowledge_seek.com.phyctogram.util.MyListView
                android:id="@+id/lv_wifiList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#f1f1f1"
                android:dividerHeight="1dp" />

            <!--<ImageButton
                android:id="@+id/addEquip"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/float_button_03"
                android:padding="5dp" />-->
        </RelativeLayout>
    </knowledge_seek.com.phyctogram.util.MyLinearView>
</LinearLayout>