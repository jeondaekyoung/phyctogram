                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="9세" />
                </TableRow>
                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10세" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="11세" />
                    <TextView
