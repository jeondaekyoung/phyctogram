<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#776096"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:src="@drawable/btn_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="MY 캐릭터"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C0AAE1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_my_animal_01"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/animal_01_01" />

            <ImageView
                android:id="@+id/iv_my_animal_02"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:src="@drawable/animal_01_02" />

            <ImageView
                android:id="@+id/iv_my_animal_03"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="3"
                android:src="@drawable/animal_01_03" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow>
                    <ImageView
                        android:id="@+id/iv_animal_00"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_00" 
                        android:alpha="0.3"/>

                    <ImageView
                        android:id="@+id/iv_animal_01"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_01"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_02"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_02"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_03"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_03"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_04"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_04"
                        android:alpha="0.3" />
                </TableRow>

                <TableRow>

                    <ImageView
                        android:id="@+id/iv_animal_05"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_05"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_06"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_06"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_07"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_07"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_08"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_08"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_09"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_09"
                        android:alpha="0.3" />
                </TableRow>

                <TableRow>

                    <ImageView
                        android:id="@+id/iv_animal_10"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_10"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_11"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_11"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_12"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_12"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_13"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_13"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_14"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_14"
                        android:alpha="0.3" />
                </TableRow>

                <TableRow>

                    <ImageView
                        android:id="@+id/iv_animal_15"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_15"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_16"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_16"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_17"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_17"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_18"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_18"
                        android:alpha="0.3" />

                    <ImageView
                        android:id="@+id/iv_animal_19"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/animal_19"
                        android:alpha="0.3" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="~0.5세" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1세" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2세" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
