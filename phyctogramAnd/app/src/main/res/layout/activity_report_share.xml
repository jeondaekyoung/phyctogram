<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="vertical"
    android:paddingBottom="160dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/borderbottom"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/ll_capture_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shareform">

                <ImageView
                    android:id="@+id/iv_capture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="59dp"
                    android:paddingBottom="22dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderbottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imBtn_fb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/icon_fb" />

            <ImageButton
                android:id="@+id/imBtn_ks"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/icon_ks" />

            <ImageButton
                android:id="@+id/imBtn_kt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_kt" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:onClick="onClick"
            android:text="닫기" />

    </LinearLayout>
</LinearLayout>