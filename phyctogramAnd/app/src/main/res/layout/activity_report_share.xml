<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#55000000" android:paddingTop="110dp" android:paddingBottom="110dp" android:paddingLeft="40dp" android:paddingRight="40dp">
    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="wrap_content" android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp" android:padding="10dp" android:background="@drawable/borderbottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/shareform" >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/sample" android:paddingLeft="25dp" android:paddingRight="25dp" android:paddingBottom="21dp" android:layout_marginTop="59dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:padding="10dp" android:background="@drawable/borderbottom">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp" android:background="@drawable/icon_fb" android:layout_marginRight="40dp"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp" android:background="@drawable/icon_ks" android:layout_marginRight="40dp"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp" android:background="@drawable/icon_kt"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_close" android:layout_width="match_parent" android:onClick="onClick"
            android:layout_height="wrap_content" android:text="닫기" android:background="#ffffff"/>

    </LinearLayout>
</LinearLayout>