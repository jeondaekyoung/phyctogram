<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/btn_login_kko"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/log_kko"
        android:gravity="center"
        android:onClick="onClick"
        android:text="카카오톡 로그인"
        android:textColor="#000000"
        android:textSize="12dp" />

    <!--<Button
        android:id="@+id/btn_login_fb_test"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/log_fb"
        android:gravity="center"
        android:onClick="onClick"
        android:text="페이스북 로그인"
        android:textColor="#ffffff"
        android:textSize="12dp" />-->

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_login_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="12dp"
        facebook:com_facebook_login_text="페이스북 로그인"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/log_btn"
        android:gravity="center"
        android:onClick="onClick"
        android:text="회원 로그인"
        android:textColor="#ffffff"
        android:textSize="12dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="copyright ⓒ 2015 Knowledge-seek Co., Ltd. all rights reserved"
        android:textColor="#fff"
        android:textSize="10dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout_Button"
        android:text="Log out with Facebook"/>

</LinearLayout>